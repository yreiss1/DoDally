<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="100dp">


    <TextView
        android:id="@+id/task_money_textview"
        android:layout_width="72dp"
        android:layout_height="64dp"

        android:layout_centerVertical="true"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="8dp"
        android:fontFamily="@font/lato"
        android:gravity="center"
        android:text="$10"
        android:textColor="#A9A9A9"
        android:textSize="24sp" />

    <LinearLayout
        android:layout_width="208dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_toRightOf="@+id/task_money_textview"
        android:orientation="vertical">

        <TextView
            android:id="@+id/task_name_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/lato_black"
            android:letterSpacing="0.04"
            android:lineSpacingExtra="4sp"
            android:textColor="#404040"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/task_time_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/task_name_textview"
            android:letterSpacing="0.04"
            android:lineSpacingExtra="4sp"
            android:textColor="#404040"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/task_cause_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/lato_italic"
            android:letterSpacing="0.04"
            android:lineSpacingExtra="4sp"
            android:textColor="#404040"
            android:textSize="14sp" />
    </LinearLayout>



</RelativeLayout>