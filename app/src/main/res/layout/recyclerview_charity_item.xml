<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/charity_item_layout">


    <ImageView
        android:layout_width="96dp"
        android:layout_height="96dp"
        android:layout_margin="16dp"
        android:id="@+id/charity_item_imageview"
        android:elevation="8dp"/>

    <LinearLayout
        android:layout_width="208dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_toRightOf="@id/charity_item_imageview"
        android:orientation="vertical">

        <TextView
            android:id="@+id/charity_name_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="Charity Name"
            android:textSize="16dp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:id="@+id/charity_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="3"
            android:text="Charity Desc" />
    </LinearLayout>

</RelativeLayout>